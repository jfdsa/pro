<div class="container">
    <div class="row">
        <div class="col-md-6">
          <h4>ジャンル一覧・追加</h4><br>
          <%= render 'layouts/error', obj: @genre %>
          
          <div class="row">
          <span>ジャンル名</span>
          <%= form_with model: @genre, url: admin_genres_path do |f|%><span>　</span>
            <%= f.text_field :name %><span>　</span>
            <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
          <%end%>
          </div><br>
          
          <table class="table">
            <thead>
              <tr><th>ジャンル</th><th></th></tr>
            </thead>
            <tbody>
              <% @genres.each do |xx|%>
              <tr>
                <td><%= xx.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(xx.id), class: "btn btn-sm btn-success" %></td>
              </tr>
              <%end%>
            </tbody>
          </table>
          
        </div>
        <div class="col-md-6"></div>
    </div>
</div>