<div class="container">
    <div class="row">
        <div class="col-md-2">
          <h4>商品新規登録</h4>
        </div><br><br>
        <div class="row">
          <%= render 'layouts/error', obj: @item %>
          <div class="col-md-4"><br><br>
            <p>商品画像</p><br>
            <p>商品名</p>
            <p>商品説明</p>
            <p>ジャンル</p><br>
            <p>税抜価格</p>
            <p>販売ステータス</p>
          </div>
          
          <div class="col-md-8"><br><br>
          <%= form_with model: @item, url: admin_items_path, method: :post do |f|%>
            <div><%= f.file_field :image %><span>　</span></div>
            <div><%= f.text_field :name %></div>
            <div><%= f.text_area :introduction %></div>
            <div><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></div><br><br>
            <div><%= f.text_field :price %>円</div>
            <div><%= f.radio_button :is_active, :true %>
                 <%= f.label :is_active_true, "販売中" %>
                 <%= f.radio_button :is_active, :false %>
                 <%= f.label :is_active_false, "販売停止中" %></div>
            
            <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
          <%end%>
          </div>
        </div>
        
    </div>
</div>