<div class="container">
  <div class="row">
    <div class="col">
      <br><h5>注文履歴一覧</h5><br><br>
      <table class="table">
        <thead>
          <tr><th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th></tr>
        </thead>
        <tbody>
          <% @orders.each do |xx|%>
          <tr>
            <td><%= link_to xx.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(xx.id)%></td>
            <td><%= xx.customer.set_name %></td>
            <td><%= xx.order_details.sum(:amount)%></td>
            <td><%= Order.statuses_i18n[xx.status] %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>