<div class="container">
    <div class="col-md-8">
      <br><h5>会員情報編集</h5><br><br>
      <%= render 'layouts/error', obj: @customer %>
      <%= form_with model: @customer, mothod: :patch, url: information_path do |f| %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %><span>　</span><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %><span>　</span><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address , :size => "57*30"%></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number%></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email%></td>
          </tr>
          <tr></tr>
        </tbody>
      </table>
      
      
      <br>
      <div class="row"><%= f.submit "編集内容を保存", class: "btn btn-sm btn-success"%><span>　　　　</span>
      <%=link_to "退会する", unsubscribe_path , class: "btn btn-sm btn-danger"%></div>
      <%end%>
    </div>
    </div>